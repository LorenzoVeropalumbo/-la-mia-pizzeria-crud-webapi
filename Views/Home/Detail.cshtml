@{
    ViewData["Title"] = "Home Page";
}

<div class="row js_post_table d-none">
    <!-- qui verranno mostrati gli elementi -->
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js"></script>

<script type="text/javascript">

    axios.get('/api/pizza/detail/1').then(res =>{
        console.log(res);
        document.querySelector('.js_post_table').innerHTML +=
        `
            <div class="col">
                <div class="pizza_card">
                        <img src="${res.data.image}" />
                    <span class="line" />
                        <h3>${res.data.title}</h3>
                        <h5>${res.data.category.title}</h5>
                        <p>${res.data.description}</p>
                    <p><span class="price">${res.data.price}</span></p>
                    <div class="dd"></div>
                    </div>
                </div>
            </div>
        `
        ;

    }).catch(error => {

        console.log(error);
    })

</script>
